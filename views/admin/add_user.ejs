<%- include('header') %>

<div class="page-wrapper">
    <div class="container">
        <div class="row heading-bg">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h5 class="txt-dark">Users</h5>
            </div>

            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="index.html">Dashboard</a></li>
                    <li class="active"><span>Users</span></li>
                </ol>
            </div>
            <% if (typeof messages.info != "undefined") { %>
                <div class="col-md-12 mt-10">
                    <%- include('notification', {type: 'success', message : messages.info}); %>
                </div>
              <% } %>
    
              <% if (typeof messages.danger != "undefined") { %>
                <div class="col-md-12 mt-10">
                    <%- include('notification', {type: 'danger', message : messages.danger}); %>
                </div>
              <% } %>
        </div>
    
        <div class="row">
            <div class="col-sm-12 col-xs-12">
                <div class="panel panel-default border-panel card-view">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h6 class="panel-title txt-dark">Add A New User</h6>
                        </div>
                        <div class="pull-right">
                            <a class="btn btn-default btn-sm" href="<%=helper.base_url()%>admin/users"> Back</a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="panel-wrapper collapse in">
                        <div class="panel-body">
                            <form action="<%=helper.base_url()%>admin/add_action_user" method="post" id="instantValidator" accept-charset="utf-8">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label mb-10" for="first_name">First name:</label>
                                            <input type="text" class="form-control required" id="first_name" name="first_name"  autocomplete="off">
                                            <% if (typeof first_name_error != "undefined") { %>
                                                <%- include('notification', {type: 'danger', message : first_name_error.msg}); %>
                                            <% } %>
                                        </div>
                                   </div>
                                   <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label mb-10" for="first_name">Last name:</label>
                                            <input type="text" class="form-control required" id="last_name" name="last_name"  autocomplete="off">
                                            <% if (typeof last_name_error != "undefined") { %>
                                                <%- include('notification', {type: 'danger', message : last_name_error.msg}); %>
                                            <% } %>
                                        </div>
                                    </div>                                  
                               </div>
                               
                               <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label mb-10" for="password">Password:</label>
                                            <input type="password" class="form-control required" id="password" name="password"  autocomplete="off">
                                            <% if (typeof password_error != "undefined") { %>
                                                <%- include('notification', {type: 'danger', message : password_error.msg}); %>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label mb-10" for="confirm_password">Confirm password:</label>
                                            <input type="password" class="form-control required" id="confirm_password" name="confirm_password"  autocomplete="off">
                                            <% if (typeof confirm_password_error != "undefined") { %>
                                                <%- include('notification', {type: 'danger', message : confirm_password_error.msg}); %>
                                            <% } %>
                                        </div>
                                    </div>                                  
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label mb-10" for="email">Email:</label>
                                            <input type="email" class="form-control required" id="email" name="email" autocomplete="off">
                                            <% if (typeof email_error != "undefined") { %>
                                                <%- include('notification', {type: 'danger', message : email_error.msg}); %>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label mb-10" for="phone">Phone:</label>
                                            <input type="number" class="form-control required" id="phone" name="phone" autocomplete="off">
                                            <% if (typeof phone_error != "undefined") { %>
                                                <%- include('notification', {type: 'danger', message : phone_error.msg}); %>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label mb-10" for="longitude">Role:</label>
                                            <div class="radio-inline">
                                                <div class="radio radio-primary">
                                                    <input type="radio" name="role" id="user" value="user">
                                                    <label for="user"> User </label>
                                                </div>
                                            </div>
                                            <div class="radio-inline">
                                                <div class="radio radio-primary">
                                                    <input type="radio" name="role" id="agent" value="agent">
                                                    <label for="agent"> Agent </label>
                                                </div>
                                            </div>
                                            <div class="radio-inline">
                                                <div class="radio radio-primary">
                                                    <input type="radio" name="role" id="admin" value="admin">
                                                    <label for="admin"> Admin </label>
                                                </div>
                                            </div>
                                            <% if (typeof role_error != "undefined") { %>
                                                <%- include('notification', {type: 'danger', message : role_error.msg}); %>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label mb-10" for="subscription">Subscription:</label>
                                            <select name="subscription_id" id="subscription_id" class="form-control required select2">
                                                <option value="" selected="selected">--Select Subscription--</option>
                                                <% subscriptions.forEach(function(subscription) { %>
                                                    <option value="<%=subscription._id %>"><%=helper.initial_capitalizer(subscription.subscription_title) %></option>
                                                <% }); %>
                                            </select>
                                            <% if (typeof subscription_id != "undefined") { %>
                                                <%- include('notification', {type: 'danger', message : subscription_id.msg}); %>
                                            <% } %>
                                        </div>
                                    </div>
                               </div>
                                <div class="form-group mb-0">
                                    <button type="submit" class="btn btn-primary"><span class="btn-text">Save</span></button>
                                </div>	
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('footer_navbar') %>
    </div>
</div>
<%- include('footer') %>