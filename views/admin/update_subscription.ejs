<%- include('header') %>

<div class="page-wrapper">
    <div class="container">
        <div class="row heading-bg">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h5 class="txt-dark">Subscription</h5>
            </div>

            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="index.html">Dashboard</a></li>
                    <li class="active"><span>Subscription</span></li>
                </ol>
            </div>
            <% if (typeof messages.info != "undefined") { %>
                <div class="col-md-12 mt-10">
                    <%- include('notification', {type: 'success', message : messages.info}); %>
                </div>
              <% } %>
    
              <% if (typeof messages.danger != "undefined") { %>
                <div class="col-md-12 mt-10">
                    <%- include('notification', {type: 'danger', message : messages.danger}); %>
                </div>
              <% } %>
        </div>
    
        <div class="row">
            <div class="col-sm-12 col-xs-12">
                <div class="panel panel-default border-panel card-view">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h6 class="panel-title txt-dark">Update Subscription</h6>
                        </div>
                        <div class="pull-right">
                            <a class="btn btn-default btn-sm" href="<%=helper.base_url()%>admin/subscription"> Back</a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="panel-wrapper collapse in">
                        <div class="panel-body">
                            <form action="<%=helper.base_url()%>admin/save_subscription" method="post" id="instantValidator" accept-charset="utf-8">
                                <div class="form-group">
                                    <label class="control-label mb-10" for="title">Title:</label>
                                    <input type="text" class="form-control required" id="title" name="title" value="<%=subscription.subscription_title%>"  autocomplete="off">
                                    <% if (typeof title_error != "undefined") { %>
                                        <%- include('notification', {type: 'danger', message : title_error.msg}); %>
                                    <% } %>
                                </div>
                                <div class="form-group">
                                    <label class="control-label mb-10" for="limit">Limit:</label>
                                    <input type="number" class="form-control required" id="limit" name="limit" min="1" value="<%=subscription.subscription_limit%>" autocomplete="off">
                                    <% if (typeof limit_error != "undefined") { %>
                                        <%- include('notification', {type: 'danger', message : limit_error.msg}); %>
                                    <% } %>
                                </div>
                                <div class="form-group">
                                    <label class="control-label mb-10" for="price">Price:</label>
                                    <input type="number" class="form-control required" id="price" name="price" min="1" value="<%=subscription.subscription_price%>" autocomplete="off">
                                    <% if (typeof price_error != "undefined") { %>
                                        <%- include('notification', {type: 'danger', message : price_error.msg}); %>
                                    <% } %>
                                </div>
                                <div class="form-group mb-0">
                                    <input type="hidden"  id="subscription_id" name="subscription_id" value="<%=subscription._id%>">
                                    <button type="submit" class="btn btn-primary"> <span class="btn-text">Save</span></button>
                                </div>	
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('footer_navbar') %>
    </div>
</div>
<%- include('footer') %>