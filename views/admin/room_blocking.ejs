<%- include('header') %>

<div class="page-wrapper">
    <div class="container">
        <div class="row heading-bg">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h5 class="txt-dark">Room Bloking</h5>
            </div>

            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="index.html">Dashboard</a></li>
                    <li class="active"><span>Room Bloking</span></li>
                </ol>
            </div>
            <% if (typeof messages.info != "undefined") { %>
                <div class="col-md-12 mt-10">
                    <%- include('notification', {type: 'success', message : messages.info}); %>
                </div>
              <% } %>
    
              <% if (typeof messages.danger != "undefined") { %>
                <div class="col-md-12 mt-10">
                    <%- include('notification', {type: 'danger', message : messages.danger}); %>
                </div>
              <% } %>
        </div>
    
        <div class="row">
            <div class="col-sm-12 col-xs-12">
                <div class="panel panel-default border-panel card-view">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h6 class="panel-title txt-dark">Room Bloking List</h6>
                        </div>
                        <div class="pull-right">
                            <a class="btn btn-primary btn-sm" href="<%=helper.base_url()%>admin/add_room_blocking">New</a>
                            <button type="button" class="btn btn-sm btn-default" data-toggle="collapse" data-target="#RoomBlockfilterElement" aria-expanded="false" aria-controls="RoomBlockfilterElement">Filter</button>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="panel-wrapper collapse in">
                        <div class="panel-body">
                            <div class="form-inline mb-30 collapse"  id="RoomBlockfilterElement">

                               <div class="form-group">
                                       <button type="button" name="applyRoomBlockfilter" id="applyRoomBlockfilter" class="btn btn-primary">Apply</button>
                                       <button type="button" name="clearRoomBlockfilter" id="clearRoomBlockfilter" class="btn btn-default">Clear</button>
                               </div>
                           </div> 

                            <table class="table mb-0" id="DatatableHolder">
                                <thead>
                                  <tr>
                                    <th>Hotel</th>
                                    <th>Type</th>
                                    <th>Capacity</th>
                                    <th>Price</th>
                                    <th>Created</th>
                                    <th>Manage</th>
                                  </tr>
                                </thead>
                                <tbody>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th rowspan="1" colspan="3"></th>
                                        <th colspan="3" id="totalPirce"></th>
                                    </tr>
                                </tfoot>
                              </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('footer_navbar') %>
    </div>
</div>
<%- include('footer') %>