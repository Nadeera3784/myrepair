<%- include('header') %>

<div class="page-wrapper">
    <div class="container">
        <div class="row heading-bg">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h5 class="txt-dark">Rooms</h5>
            </div>

            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="index.html">Dashboard</a></li>
                    <li class="active"><span>Rooms</span></li>
                </ol>
            </div>
            <% if (typeof messages.info != "undefined") { %>
                <div class="col-md-12 mt-10">
                    <%- include('notification', {type: 'success', message : messages.info}); %>
                </div>
              <% } %>
    
              <% if (typeof messages.danger != "undefined") { %>
                <div class="col-md-12 mt-10">
                    <%- include('notification', {type: 'danger', message : messages.danger}); %>
                </div>
              <% } %>
        </div>
    
        <div class="row">
            <div class="col-sm-12 col-xs-12">
                <div class="panel panel-default border-panel card-view">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h6 class="panel-title txt-dark">Room List</h6>
                        </div>
                        <div class="pull-right">
                            <a class="btn btn-primary btn-sm" href="<%=helper.base_url()%>admin/add_rooms">New</a>
                            <button type="button" class="btn btn-sm btn-default" data-toggle="collapse" data-target="#RoomfilterElement" aria-expanded="false" aria-controls="RoomfilterElement">Filter</button>
                            <a class="btn btn-outline btn-primary btn-sm" href="<%=helper.base_url()%>admin/room_blocking">Block</a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="panel-wrapper collapse in">
                        <div class="panel-body">
                            <div class="form-inline mb-30 collapse"  id="RoomfilterElement">
                                <div class="form-group mr-15">
                                    <select name="hotel_id" id="hotel_id" class="form-control select2x">
                                        <option value="" selected="selected">--Select Hotel--</option>
                                         <% hotels.forEach(function(hotel) { %>
                                            <option value="<%=hotel._id %>"><%=helper.initial_capitalizer(hotel.hotel_title) %></option>
                                         <% }); %>
                                    </select>
                                 </div>

                                <div class="form-group mr-15">
                                    <select name="type" id="type" class="form-control">
                                        <option value="" selected="selected">--Select Type--</option>
                                        <%  types.forEach(function(tp) {  %> 
                                            <option value="<%=tp%>"><%=helper.initial_capitalizer(tp)%></option>
                                        <% }); %> 
                                    </select>
                                </div>

                               <div class="form-group">
                                       <button type="button" name="applyRoomfilter" id="applyRoomfilter" class="btn btn-primary">Apply</button>
                                       <button type="button" name="clearRoomfilter" id="clearRoomfilter" class="btn btn-default">Clear</button>
                               </div>
                           </div> 

                            <table class="table mb-0" id="DatatableHolderRoooms">
                                <thead>
                                  <tr>
                                    <th>Hotel</th>
                                    <th>Type</th>
                                    <th>Capacity</th>
                                    <th>Price</th>
                                    <th>Created</th>
                                    <th>Manage</th>
                                  </tr>
                                </thead>
                                <tbody>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th rowspan="1" colspan="3"></th>
                                        <th colspan="3" id="totalPirce"></th>
                                    </tr>
                                </tfoot>
                              </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('footer_navbar') %>
    </div>
</div>
<%- include('footer') %>