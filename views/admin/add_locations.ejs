<%- include('header') %>

<div class="page-wrapper">
    <div class="container">
        <div class="row heading-bg">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h5 class="txt-dark">Locations</h5>
            </div>

            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="index.html">Dashboard</a></li>
                    <li class="active"><span>Locations</span></li>
                </ol>
            </div>
            <% if (typeof messages.info != "undefined") { %>
                <div class="col-md-12 mt-10">
                    <%- include('notification', {type: 'success', message : messages.info}); %>
                </div>
              <% } %>
    
              <% if (typeof messages.danger != "undefined") { %>
                <div class="col-md-12 mt-10">
                    <%- include('notification', {type: 'danger', message : messages.danger}); %>
                </div>
              <% } %>
        </div>
    
        <div class="row">
            <div class="col-sm-12 col-xs-12">
                <div class="panel panel-default border-panel card-view">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h6 class="panel-title txt-dark">Add A New Location</h6>
                        </div>
                        <div class="pull-right">
                            <a class="btn btn-default btn-sm" href="<%=helper.base_url()%>admin/locations"> Back</a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="panel-wrapper collapse in">
                        <div class="panel-body">
                            <form action="<%=helper.base_url()%>admin/add_action_location" method="post" accept-charset="utf-8">
                                <div class="form-group">
                                    <label class="control-label mb-10" for="name">Name:</label>
                                    <input type="text" class="form-control" id="name" name="name"  autocomplete="off">
                                    <% if (typeof name_error != "undefined") { %>
                                        <%- include('notification', {type: 'danger', message : name_error.msg}); %>
                                    <% } %>
                                </div>
                                <div class="form-group">
                                    <label class="control-label mb-10" for="latitude">Latitude:</label>
                                    <input type="text" class="form-control" id="latitude" name="latitude" autocomplete="off">
                                    <% if (typeof latitude_error != "undefined") { %>
                                        <%- include('notification', {type: 'danger', message : latitude_error.msg}); %>
                                    <% } %>
                                </div>
                                <div class="form-group">
                                    <label class="control-label mb-10" for="longitude">Longitude:</label>
                                    <input type="text" class="form-control" id="longitude" name="longitude" autocomplete="off">
                                    <% if (typeof longitude_error != "undefined") { %>
                                        <%- include('notification', {type: 'danger', message : longitude_error.msg}); %>
                                    <% } %>
                                </div>
                                <div class="form-group mb-0">
                                    <button type="submit" class="btn btn-primary"><span class="btn-text">Save</span></button>
                                </div>	
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('footer_navbar') %>
    </div>
</div>
<%- include('footer') %>